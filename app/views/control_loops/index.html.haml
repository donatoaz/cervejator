%h1 Listing control_loops

%table
  %thead
    %tr
      %th Name
      %th Mode
      %th Reference
      %th Parameters
      %th Sensor
      %th Actuator
      %th
      %th
      %th

  %tbody
    - @control_loops.each do |control_loop|
      %tr
        %td= control_loop.name
        %td= control_loop.mode
        %td= control_loop.reference
        %td= control_loop.parameters
        %td= link_to control_loop.sensor.name, control_loop.sensor
        %td= link_to control_loop.actuator.name, control_loop.actuator
        %td= link_to 'Show', control_loop
        %td= link_to 'Edit', edit_control_loop_path(control_loop)
        %td= link_to 'Destroy', control_loop, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Control loop', new_control_loop_path
